<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#D996C7"
    android:fontFamily="@font/mplusrounded1c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="60dp"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        android:paddingTop="10px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="SIGN UP"
            android:textColor="#bf6bb1"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/idTextForSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="ID"
                android:textSize="20dp"
                android:textColor="#bf6bb1"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/idEdtForSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTextForSignup"
                android:paddingTop="10px"
                />

            <TextView
                android:id="@+id/passTextForSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idEdtForSignup"
                android:paddingTop="40dp"
                android:text="PASSWORD"
                android:textSize="20dp"
                android:textColor="#bf6bb1"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/passEditForSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passTextForSignup"
                android:paddingTop="10px"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/passTextConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passEditForSignup"
                android:paddingTop="40dp"
                android:text="PASSWORD"
                android:textSize="20dp"
                android:textColor="#bf6bb1"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/passEditConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passTextConfirm"
                android:paddingTop="10px"
                android:inputType="textPassword"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

           <!-- <TextView
                android:id="@+id/sighup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="25dp"
                android:background="#cccccc"
                android:padding="15dp"
                android:text="SIGN UP"
                android:fontFamily="@font/mplusrounded1c"
                android:textSize="15dp" /> -->

            <ImageButton
                android:id="@+id/signup"
                android:layout_width="124dp"
                android:layout_height="60dp"
                android:background="@drawable/btnsignup" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>