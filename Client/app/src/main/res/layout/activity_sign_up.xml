<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#FFD9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="60dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="10px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10px"
            android:text="SIGN UP"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/idTextForSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="ID"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/idEdtForSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTextForSignup"
                android:paddingTop="10px" />

            <TextView
                android:id="@+id/passTextForSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idEdtForSignup"
                android:paddingTop="40dp"
                android:text="PASSWORD"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/passEditForSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passTextForSignup"
                android:paddingTop="10px" />

            <TextView
                android:id="@+id/passTextConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passEditForSignup"
                android:paddingTop="40dp"
                android:text="PASSWORD"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/passEditConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passTextConfirm"
                android:paddingTop="10px" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sighup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="25dp"
                android:background="#cccccc"
                android:padding="15dp"
                android:text="SIGN UP"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>